// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"options": {
				"cwd": "ui"
			},
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"command": "go build",
			"label": "Build server",
			"problemMatcher": [
				"$go"
			],
			"options": {
				"cwd": "${workspaceFolder}/server/cmd/codelineage-server"
			}
		}
	]
}
