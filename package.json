{
  "name": "codelineage",
  "displayName": "CodeLineage",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codelineage.start",
        "title": "CodeLineage: Start Analysis"
      },
      {
        "command": "codelineage.stop",
        "title": "CodeLineage: Stop Analysis"
      }
    ],
    "configuration": {
      "title": "CodeLineage",
      "properties": {
        "codeLineage.maxPathSegments": {
          "type": "number",
          "default": 0,
          "description": "The maximum amount of segments in each lineage path, or `0` for no limit"
        },
        "codeLineage.maxLensLength": {
          "type": "number",
          "default": 80,
          "description": "The maximum length of each lens (the tags above your Go functions)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@viz-js/viz": "^3.11.0",
    "jsdom": "^25.0.1",
    "json-rpc-2.0": "^1.7.0",
    "ts-lsp-client": "^1.0.3",
    "ts-node": "^10.9.2"
  }
}
